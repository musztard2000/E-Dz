<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pl.kot.app1.MainActivity">

    <TextView
        android:text="0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="50dp"
        android:layout_marginTop="40dp"
        android:id="@+id/totalTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What is"
        android:id="@+id/whatIsTextView"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/totalTextView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/procentTextEdit"
        android:layout_below="@+id/whatIsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:hint="Enter percentage"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/numberTextEdit"
        android:layout_marginTop="67dp"
        android:hint="Enter number"
        android:textAlignment="center"
        android:layout_below="@+id/procentTextEdit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="of"
        android:id="@+id/textView"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/procentTextEdit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="%"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/procentTextEdit"
        android:layout_toEndOf="@+id/procentTextEdit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calculatePercentageBtn"
        android:layout_marginTop="42dp"
        android:background="@android:color/holo_red_light"
        android:layout_below="@+id/numberTextEdit"
        android:layout_alignStart="@+id/numberTextEdit"
        android:layout_alignEnd="@+id/numberTextEdit"
        android:textColor="#ffffff" />
</RelativeLayout>
